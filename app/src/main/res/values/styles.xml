<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="login_top_btn">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_gray_hollow_rectangle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="txt_hollow">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_gray_hollow_rectangle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>

    </style>


    <style name="txt_bottom">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/text_bottom_666</item>
        <item name="android:background">@drawable/bg_home_text_bottom_unselect</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_menu_order">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_menu_order</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>

    </style>

    <style name="tv_preorder_total">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <style name="tv_dialog_order_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_menu_order</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
    </style>

</resources>
