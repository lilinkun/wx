<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical">
    <include layout="@layout/layout_login_top" />
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:padding="20dp"

        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:id="@+id/ed_login_head_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_gravity="center_horizontal"

                android:background="@drawable/bg_gray_hollowr_circle"
                android:layout_width="92dp"
                android:layout_height="92dp">

                <ImageView
                    android:background="@color/colorPrimary"
                    android:layout_centerInParent="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎登录"
                android:textColor="#ffeba905"
                android:textSize="20sp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智佳基烤鸡福州万达店"
                android:textColor="@color/title_color"
                android:textSize="16sp"
                />
        </LinearLayout>
            <EditText
                android:layout_below="@id/ed_login_head_layout"
                android:layout_marginRight="156dp"
                android:layout_marginLeft="156dp"
                android:id="@+id/ed_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_gray_rectangle"
                android:hint="请输入您的密码"
                android:inputType="numberPassword"
                android:paddingLeft="10dp" />
            <com.android.wx.weight.CustomNumKeyView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="156dp"
                android:layout_marginRight="156dp"
                android:layout_below="@id/ed_login_pwd"
                android:id="@+id/custom_login"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_below="@id/custom_login"
            android:layout_marginRight="@dimen/login_margin"
            android:layout_marginLeft="@dimen/login_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/btn_login_delect"
                android:src="@mipmap/icon_login_delect"
                android:layout_width="172dp"
                android:layout_height="74dp"/>


            <ImageView android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_login_confirm"
                android:src="@mipmap/icon_login_confir"
                android:layout_width="172dp"
                android:layout_height="74dp"/>

            <ImageView
                android:layout_toLeftOf="@id/btn_login_confirm"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_login_delect"
                android:src="@mipmap/icon_login_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>