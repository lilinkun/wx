<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/title_color"
            >

            <TextView
                android:id="@+id/tv_change_table_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/bg_changetable_exit"
                />


            <Spinner
                android:id="@+id/sp_change_table"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_gray_rectangle"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:layout_width="200dp"
                android:layout_height="46dp">
            </Spinner>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preorder_save"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/title_color"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@drawable/bg_adapter_choose_num"
                />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:paddingBottom="20dp"
            android:id="@+id/recycler_table"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <Switch
        android:id="@+id/sw_hall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="200dp"
        android:thumb="@android:color/transparent"
        android:track="@drawable/home_switch"
        android:textOn=""
        android:textOff=""
        android:checked="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>