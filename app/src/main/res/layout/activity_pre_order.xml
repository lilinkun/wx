<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/layout_pre_order_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f0eeee"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="1dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="22dp"
                    >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"
                    android:textSize="14sp"
                    android:textColor="@color/text_yellow_00"
                    android:gravity="center"
                    android:background="@drawable/tv_pre_order"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textSize="20sp"
                    android:text="@string/tv_order"
                    android:layout_marginLeft="14dp"
                    />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_customer_info"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:drawableRight="@drawable/ic_sanjiao"
                        />

                    <TextView
                        android:id="@+id/tv_change_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_change_table"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp"
                        android:drawableRight="@drawable/ic_sanjiao"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:id="@+id/tv_customer_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_personer_num"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp"
                        android:drawableRight="@drawable/ic_sanjiao"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_pre_type"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp"
                        android:drawableRight="@drawable/ic_sanjiao"
                        android:layout_marginLeft="15dp"
                        />

                </LinearLayout>

                </RelativeLayout>


            </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_orderid"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_order_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:text="9839283923"
                                android:textSize="14sp"
                                />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="启单: "
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    />

                                <TextView
                                    android:id="@+id/tv_orderer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/sp_14"
                                    />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="类型: "
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_order_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_type"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_unsave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unsave"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="桌号: "
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_pre_order_table_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_pre_order_customer_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+添加备注"
                            android:textColor="@color/title_color"
                            android:textSize="14sp"
                            />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/ll_preorder_bottom"
                />

                <TextView
                    android:id="@+id/tv_no_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preorder_no_food"
                    android:layout_centerInParent="true"
                    android:textColor="#ff999999"
                    android:textSize="24sp"
                    />


            <LinearLayout
                android:id="@+id/ll_preorder_bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center">

                <TextView
                    android:text="@string/preorder_divide_line"
                    style="@style/txt_menu_order"
                    />

                <TextView
                    android:id="@+id/tv_pre_order_plus"
                    android:text="@string/preorder_plus"
                    style="@style/txt_menu_order"
                    />

                <TextView
                    android:id="@+id/tv_pre_order_num"
                    android:text="@string/preorder_num"
                    style="@style/txt_menu_order"
                    />

                <TextView
                    android:id="@+id/tv_pre_order_reduce"
                    android:text="@string/preorder_reduce"
                    style="@style/txt_menu_order"
                    />

                <TextView
                    android:text="@string/preorder_sauce"
                    style="@style/txt_menu_order"
                    />

                <TextView
                    android:id="@+id/tv_pre_order_change_price"
                    android:text="@string/preorder_rechange_price"
                    style="@style/txt_menu_order"
                    />



            </LinearLayout>

                <TextView
                    android:id="@+id/tv_change_start_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/menu_click_bg"
                    android:textSize="18dp"
                    android:text="@string/change_start_order"
                    android:textColor="@color/text_bottom_666"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    />


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.78"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_menu"
                    android:textColor="@color/text_bottom_666"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/menu_click_bg"
                    android:drawableRight="@drawable/ic_sanjiao"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_self_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/self_menu"
                        android:textColor="@color/text_bottom_666"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/menu_click_bg"
                        android:layout_marginRight="15dp"
                        />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_menu"
                    android:textColor="@color/text_bottom_666"
                    android:textSize="20sp"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_self_menu"
                    android:background="@drawable/menu_click_bg"
                    />

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80dp"
                    android:orientation="vertical">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/order_list_tablayou"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                app:tl_indicator_color="@color/title_color"
                app:tl_indicator_height="1dp"
                app:tl_textUnselectColor="#666666"
                app:tl_textSelectColor="@color/title_color"
                app:tl_textsize="15sp"
                app:tl_indicator_width_equal_title="true"
                app:tl_tab_space_equal="true">
            </com.flyco.tablayout.SlidingTabLayout>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/order_list_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_price"
                                android:textColor="#DE0711"
                                android:textSize="20sp"
                                />

                            <TextView
                                android:id="@+id/tv_preorder_total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#DE0711"
                                android:text="0.00"
                                android:textSize="20sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tax_price"
                                android:textColor="#DE0711"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/tv_tax_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#DE0711"
                                android:text="0.00"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#DE0711"
                                android:text=")"
                                android:textSize="16sp"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total"
                                android:textColor="@color/text_gray"
                                android:textSize="20sp"
                                />

                            <TextView
                                android:id="@+id/tv_preorder_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:text="0"
                                android:textSize="20sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/piece_total"
                                android:textColor="@color/text_gray"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/tv_goods_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:text="0.00"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:text="@string/goods_tip"
                                android:textSize="16sp"
                                />

                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:id="@+id/tv_preorder_exit"
                                android:text="@string/preorder_exit"
                                style="@style/tv_preorder_total"
                                android:background="@drawable/menu_click_bg"
                                android:textColor="@color/text_bottom_666"
                                />

                            <TextView
                                android:id="@+id/tv_preorder_delete"
                                android:text="@string/preorder_delete"
                                style="@style/tv_preorder_total"
                                android:background="@drawable/menu_click_bg"
                                android:textColor="@color/text_bottom_666"
                                />

                            <TextView
                                android:id="@+id/tv_preorder_save"
                                android:text="@string/preorder_save"
                                style="@style/tv_preorder_total"
                                android:background="@drawable/menu_click_bg"
                                android:textColor="@color/text_bottom_666"
                                />

                            <TextView
                                android:id="@+id/tv_preorder_pay"
                                android:text="@string/preorder_pay"
                                style="@style/tv_preorder_total"
                                android:background="@drawable/bg_click_red"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/tv_preorder_go_kitchen"
                                android:text="@string/preorder_go_kitchen"
                                style="@style/tv_preorder_total"
                                android:background="@drawable/bg_click_black"
                                android:textColor="@color/text_yellow_00"
                                />




                        </LinearLayout>



                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>





    </LinearLayout>




</LinearLayout>
