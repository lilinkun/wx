<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_adapter_choose_num_sure"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entity_card"
        android:textColor="#ffffb600"
        android:textSize="44sp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/dp_40"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_vip_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:text="卡号  14589635248"
            />

        <TextView
            android:id="@+id/tv_vip_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:text="姓名  劳先生"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/tv_vip_card_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:text="余额  4567.00"
            android:layout_marginTop="@dimen/dp_10"
            />

    </LinearLayout>



</LinearLayout>
