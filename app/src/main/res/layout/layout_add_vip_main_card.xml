<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_home_get">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_vip_card"
                android:layout_centerInParent="true"
                android:textColor="@color/text_yellow_00"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:id="@+id/tv_add_vip"
                style="@style/vip_text_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="@string/add_other_info"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_add_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    style="@style/vip_text_bg"
                    android:text="@string/vip_card_id"
                    />

                <EditText
                    android:id="@+id/et_vip_card"
                    style="@style/vip_edit"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:text="@string/name"
                    style="@style/vip_text_bg"
                    />

                <EditText
                    android:id="@+id/et_vip_username"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:text="@string/balance"
                    style="@style/vip_text_bg"
                    />

                <EditText
                    android:id="@+id/et_vip_balance"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    style="@style/vip_text_bg"
                    android:text="@string/integral"
                    />

                <EditText
                    android:id="@+id/et_vip_integral"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:text="@string/register_date"
                    style="@style/vip_text_bg"
                    />

                <TextView
                    android:id="@+id/tv_register_date"
                    style="@style/vip_text_bg"
                    android:layout_marginLeft="5dp"
                    />


                <TextView
                    style="@style/vip_text_bg"
                    android:text="@string/to"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tv_register_effective_date"
                    android:gravity="center_vertical"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_add_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="#ff4b4b41"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/et_vip_name"
                    style="@style/vip_edit"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surname"
                    android:textColor="#ff4b4b41"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/et_vip_surname"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birth"
                    android:textColor="#ff4b4b41"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/et_vip_birthday"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tel"
                    android:textColor="#ff4b4b41"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/et_vip_tel"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="#ff4b4b41"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/et_vip_email"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="#ff4b4b41"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/et_vip_address"
                    style="@style/vip_edit"
                    />


            </LinearLayout>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                >

                <TextView
                    android:id="@+id/tv_exit"
                    style="@style/vip_btn_bg"
                    android:text="@string/exit"
                    android:background="@drawable/bg_adapter_choose_num"
                    />


                <TextView
                    android:id="@+id/tv_vip_save"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/preorder_save"
                    android:textColor="@color/text_yellow_00"
                    android:background="@drawable/bg_home_text_bottom_select"
                    android:layout_centerVertical="true"
                    style="@style/vip_btn_bg"
                    />


            </LinearLayout>



        </RelativeLayout>

</LinearLayout>
