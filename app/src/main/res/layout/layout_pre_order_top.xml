<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="@color/title_color"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_login_top_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_preorder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="18:00"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_preorder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-13 2021"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/title_color"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <com.android.wx.weight.DrawableCenterTextView
            android:id="@+id/tv_pre_order_report"
            android:drawableLeft="@mipmap/all_home1"
            android:layout_weight="1"
            style="@style/txt_hollow"
            android:text="@string/pre_order_report"/>


        <com.android.wx.weight.DrawableCenterTextView
            android:drawableLeft="@mipmap/all_change_order"
            android:layout_weight="1"
            style="@style/txt_hollow"
            android:text="@string/home_change_order"/>

        <com.android.wx.weight.DrawableCenterTextView
            android:drawableLeft="@mipmap/all_till"

            android:layout_weight="1"
            style="@style/txt_hollow"
            android:text="@string/home_till"/>

        <com.android.wx.weight.DrawableCenterTextView
            android:id="@+id/tv_more"
            android:drawableLeft="@mipmap/all_more"
            android:layout_weight="1"
            style="@style/txt_hollow"
            android:text="@string/pre_order_language"/>
</LinearLayout>

    </RelativeLayout>

</LinearLayout>
