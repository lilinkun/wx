<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_color"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_top_height">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="18:00"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_login_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-13 2021"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/base_margin"
            android:orientation="horizontal">

            <TextView style="@style/login_top_btn"
                android:text="客服"
                />
            <TextView
                android:text="帮助"
                style="@style/login_top_btn"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="语言"
                style="@style/login_top_btn"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/iv_login_top_layout"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_margin"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_login_top_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_login_top_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login_top_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx智慧收银系统弄"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_login_top_name"
                android:layout_marginTop="2dp"
                android:text="888-888-8888"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>